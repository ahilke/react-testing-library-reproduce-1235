{
  "compilerOptions": {
    // Project
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true,

    // Language
    "target": "es2022",
    "module": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Interoperability
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true
  },
  "include": ["./src/"]
}
